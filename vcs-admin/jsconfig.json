{
  "name": "vcs-admin",
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "target": "ES2021",
    "checkJs": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../vcs-shared"
    }
  ],
  "typeAcquisition": {
    "enable": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "moduleResolution": "node"
    }
  },
  "eslint": true,
  "files.associations": {
    "*.js": "javascript"
  }
}
